{{#if posts.length}}
<article class="post">
    <h1>Your Posts</h1>

    {{#each posts as |post|  }}
    <div class="post-info">
        <a class="edit-post" href="/dashboard/edit/{{ id }}">
            <h2>{{ title }}</h2>
        </a>
    </div>
    {{/each}}

</article>
{{/if}}

<button type="submit" class="btn"><a class="link" href="/dashboard/new">+ New Post</a></button>

